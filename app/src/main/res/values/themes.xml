<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Theme.Note" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/colorGreen</item>
        <item name="colorPrimaryVariant">@color/colorGreen</item>
        <item name="colorOnPrimary">@color/colorText</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/colorGreen</item>
        <item name="colorSecondaryVariant">@color/colorGreen</item>
        <item name="colorOnSecondary">@color/colorText</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/colorGreen</item>

        <!-- Background and surface -->
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="colorSurface">@color/colorTaskCardBackground</item>

        <!-- Text colors -->
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textColorSecondary">@color/colorTextSecondary</item>
    </style>
</resources>